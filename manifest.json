{
  "manifest_version": 2,
  "name": "Dilbert Comic Strips",
  "short_name": "DilbertComicStrips",
  "version": "2.1",
  "description": "Shows the daily comic strips from Dilbert.com , allowing you to navigate thru any previous comic.",
  "icons": {
    "48": "icons/comic-icon-48.png",
    "128": "icons/comic-icon-128.png"
  },
  "permissions": [
    "alarms",
    "https://dilbert.com/*",
    "https://assets.amuniversal.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/comic-icon.png",
    "default_popup": "popup/comic.html",
    "browser_style": true
  }
}
